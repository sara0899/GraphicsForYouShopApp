@model GraphicsForYouShopApp.Models.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
    Layout = "~/Views/Shared/_LayoutRegisterLogin.cshtml";
}
<div class="container-signupin">

    <div class="side">
        <div class="container-more">
            <i class="fa-solid fa-angle-down fa-8x"></i>
            <h3>DOWIEDZ SIĘ WIĘCEJ</h3>
            <p>Przed złożeniem zamówienia, warto zapoznać się z informacjami o procesie realizacji</p>
            <a asp-action="About" asp-controller="Home">O sklepie</a>
        </div>
    </div>

    <div class="main">
        <div class="container-form">

            <form method="post" asp-action="Register" class="register-form">

                <p class="title">REJESTRACJA</p>
                <div class="separator"></div>
               
                <p class="error">@TempData["errorMessage"]</p>
                <div class="inputs">

                    <div class="form-control">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
               

                <div class="form-control">
                    <label asp-for="Surname" class="form-label"></label>
                    <input type="text" asp-for="Surname" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
                <span asp-validation-for="Surname"></span>
                 <span asp-validation-for="Name"></span>

                    <div class="form-control">
                    
                        <label asp-for="Company" class="form-label"></label>
                        <input type="text" asp-for="Company" class="form-input"/>
                        
                    
                    </div>
                
                    <div class="form-control">
                        <label asp-for="NIP" class="form-label"></label>
                        <input type="number" asp-for="NIP" class="form-input"/>
                    </div>
              
                <div class="form-control">
                    <label asp-for="Street" class="form-label"></label>
                    <input type="text" asp-for="Street" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
               

                <div class="form-control">
                    <label asp-for="BuildingNumber" class="form-label"></label>
                    <input type="text" asp-for="BuildingNumber" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
                 <span asp-validation-for="Street"></span>
                <span asp-validation-for="BuildingNumber"></span>
                
                <div class="form-control">
                     <label asp-for="ZIPCode" class="form-label"></label>
                    <input type="text" asp-for="ZIPCode" autocomplete="off" class="form-input" placeholder=" "/>
                   
                    
                </div>
                

                <div class="form-control">
                     <label asp-for="City" class="form-label"></label>
                    <input type="text" asp-for="City" autocomplete="off" class="form-input" placeholder=" "/>
                   
                    
                </div>
                <span asp-validation-for="City"></span>
                <span asp-validation-for="ZIPCode"></span>
              
                <div class="form-control">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input type="text" asp-for="PhoneNumber" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
                

                <div class="form-control">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="text" asp-for="Email" autocomplete="off" class="form-input" placeholder=" "/>
                    
                    
                </div>
                <span asp-validation-for="Email"></span>
                <span asp-validation-for="PhoneNumber"></span>

                <div class="form-control">
                    
                         <label asp-for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" class="form-input" autocomplete="off" placeholder=" "/>
                       
                        
                </div>
               
                <div class="form-control">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        
                        <input type="password" asp-for="ConfirmPassword" class="form-input" autocomplete="off" placeholder=" "/>
                        
                 </div>
                <span asp-validation-for="ConfirmPassword"></span>
                 <span asp-validation-for="Password"></span>
            </div>
                <input type="submit" value="ZAREJESTRUJ SIĘ" class="register-button"/>
            </form>
        </div>
    </div>
</div>
