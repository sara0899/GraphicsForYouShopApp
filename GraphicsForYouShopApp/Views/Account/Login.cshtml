@model GraphicsForYouShopApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
    Layout = "~/Views/Shared/_LayoutRegisterLogin.cshtml";

}

<div class="container-signupin">

    <div class="side">
        <div class="container-more">
            <i class="fa-solid fa-angle-down fa-8x"></i>
            <h3>POSIADASZ KONTO?</h3>
            <p>Jeśli wcześniej nie założyłeś konta, zostaniesz poproszony o podanie swoich danych</p>
            <a asp-action="Register" asp-controller="Account">ZAREJESTRUJ SIĘ</a>
        </div>
    </div>

    <div class="main">
        <div class="container-form">

            <form method="post" asp-action="Login" class="register-form">

                <p class="title">LOGOWANIE</p>
                <div class="separator"></div>
               
                <p class="error">@TempData["errorMessage"]</p>
                <p class="success">@TempData["successMessage"]</p>

                <div class="form-control">
                    <label asp-for="Email" class="form-label"></label>
                    <input type="text" asp-for="Email" autocomplete="off" class="form-input" placeholder=" "/>
                </div>
                <span asp-validation-for="Email"></span>
                <div class="form-control">
                    <label asp-for="Password" class="form-label"></label>
                    <input type="password" asp-for="Password" autocomplete="off" class="form-input" placeholder=" "/>
                    
                </div>
                <span asp-validation-for="Password"></span>

                @Html.Hidden("ifCheckout", (object)ViewBag.ifCheckout)
               
            
                <input type="submit" value="ZALOGUJ SIĘ" class="register-button"/>
            </form>

        </div>
    </div>
</div>
