@using GraphicsForYouShopApp.Data.Enums
@using GraphicsForYouShopApp.Models
@model List<Collection>

@{
    ViewData["Title"] = "Zarządzanie kolekcjami";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-checkout-all">
    <div class="checkout-contener">
        @if (Model != null)
        {
            <p style="font-size: 30px; margin-bottom: 2em">Stworzone kolekcje grafik</p>

            <div class="checkout-projects">
                <div class="checkout-photo"></div>
                <div class="checkout-name">
                </div>
                <div class="checkout-price">
                    
                </div>

                <div class="checkout-delete">
                    Edytuj
                </div>

            </div>

            <hr style="width: 100%; margin-left: auto; margin-right: auto;margin-top: 1em; margin-bottom: 1em"/>
            @foreach (Collection collection in Model)
            {
                <div class="checkout-projects">
                    <div class="checkout-photo"></div>
                    <div class="checkout-name">
                        @collection.Name
                    </div>
                    <div class="checkout-price"></div>
                    <div class="checkout-delete">
                         <a asp-action="Collection" asp-controller="Graphic" asp-route-Id="@collection.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                         </a>
                    </div>
                </div>
            }
        }
        <div class="down-plus">
            <i class="fa-sharp fa-solid fa-circle-plus fa-3x" onclick="addCollection()"></i>
        </div>
    </div>
</div>